<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CalcButtonOperator" parent="CalcButton">
        <item name="android:background">@drawable/btn_operator</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcButtonClear" parent="CalcButton">
        <item name="android:background">@drawable/btn_clear</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcButtonEqual" parent="CalcButton">
        <item name="android:background">@drawable/btn_equal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
